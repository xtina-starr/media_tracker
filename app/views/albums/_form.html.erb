<%= form_for @album, url: album_update_path(@album.id) do |f| %>
  <%= f.label :album_name %>
  <%= f.text_field :album_name %><br>
  <%= f.label :artist %>
  <%= f.text_field :artist %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.submit "Save", :class => "btn btn-default" %>
<% end %>