<div id='movie-form'>
  <%= form_for @movie, url: movie_update_path(@movie.id) do |f| %>
    <div class='field'>
      <%= f.label :movie_name %>
      <%= f.text_field :movie_name %><br>
    </div>
    <div class='field'>
      <%= f.label :director %>
      <%= f.text_field :director %><br>
    </div>
    <div class='field'>
      <%= f.label :description %>
      <%= f.text_area :description %><br>
    </div>
    <div class='action'>
      <%= f.submit "Save" %>
    </div>
    <% end %>
</div>